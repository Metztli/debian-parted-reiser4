@@ -132,7 +132,7 @@ pt_limit_lookup (register const char *str, register unsigned int len)
 #line 8 "pt-limit.gperf"
       {"dasd",UINT32_MAX,UINT32_MAX},
       {""}, {""}, {""}, {""},
